<div class="row">
  <div class="col-md-4 js-preview-detail">
    <div class="preview-detail">
      <strong>Bottleneck Distance</strong>
      <p class="js--distance">{{currentD}}</p>
    </div>
    <div class="preview-detail">
      <strong>Direction</strong>
      <p class="js--direction">[{{currentX}}, {{currentY}}]</p>
    </div>
    <div class="preview-detail">
      <strong>Projection Image</strong>
      <p class="js--image"><img src="{{imageUrl}}" /></p>
    </div>
  </div>
  <div class="col-md-8">
    <svg id="globe" class="center-block"></svg>
  </div>
</div>